@model BookStore.Models.CoverType

<form method="post" asp-action="ConfirmDelete">
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kaftsoort @Model.Name echt verwijderen?</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width: 250px">Verwijderen</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width: 250px">
            Terug naar overzicht
        </a>
    </div>
</form>